# Telegram Bot Configuration
TG_BOT_TOKEN=
APP_ID=
API_HASH=
BOT_USERNAME=
ADMINS=

# Database Configuration
DATABASE_TYPE=postgres
DATABASE_URL=
MONGODB_DATABASE=

# --- Uploader Configuration ---
# Set the default upload destination. Can be 'telegram', 'gdrive', or 'rclone'.
DEFAULT_UPLOAD=telegram

# GDrive Configuration (only for DEFAULT_UPLOAD=gdrive)
# Your GDrive folder ID. Can be a normal folder ID or a Team Drive ID.
GDRIVE_ID=
# Set to 'True' if GDRIVE_ID is a Team Drive ID.
IS_TEAM_DRIVE=False
# Set to 'True' to use Service Accounts for GDrive uploads.
# Requires the 'accounts' folder with SA .json files in the root directory.
USE_SERVICE_ACCOUNTS=False
# Set to 'True' to prevent uploading files that already exist in the GDrive destination.
STOP_DUPLICATE=False
# Optional: The base URL for your GDrive index (e.g., for goindex, cf-worker-dir).
INDEX_URL=

# Rclone Configuration (only for DEFAULT_UPLOAD=rclone)
# The default rclone path (e.g., "remote:path/to/folder").
RCLONE_PATH=
# Optional: Custom flags for rclone commands, separated by '|'.
# Example: --drive-pacer-min-sleep=10ms|--drive-pacer-burst=1000
RCLONE_FLAGS=
# Optional: For using the 'rclone serve' feature.
RCLONE_SERVE_URL=
RCLONE_SERVE_PORT=8080
RCLONE_SERVE_USER=
RCLONE_SERVE_PASS=

# --- Other Configurations ---

# Working Directory
WORK_DIR=./bot/
DOWNLOADS_FOLDER=DOWNLOADS
LOCAL_STORAGE=./bot/DOWNLOADS

# File/Folder Naming
PLAYLIST_NAME_FORMAT={title} - Playlist
TRACK_NAME_FORMAT={title} - {artist}

# Qobuz Configuration (optional)
QOBUZ_EMAIL=
QOBUZ_PASSWORD=
QOBUZ_USER=
QOBUZ_TOKEN=
#QOBUZ_QUALITY=

# Deezer Configuration (optional)
DEEZER_EMAIL=
DEEZER_PASSWORD=
DEEZER_BF_SECRET=
DEEZER_ARL=

# Tidal Configuration (optional)
ENABLE_TIDAL=False
TIDAL_MOBILE=False
TIDAL_MOBILE_TOKEN=
TIDAL_ATMOS_MOBILE_TOKEN=
TIDAL_TV_TOKEN=
TIDAL_TV_SECRET=
TIDAL_CONVERT_M4A=False
TIDAL_REFRESH_TOKEN=
TIDAL_COUNTRY_CODE=US
#TIDAL_QUALITY=
#TIDAL_SPATIAL=
#TIDAL_NG_DOWNLOAD_BASE_PATH=

# Concurrent Workers
MAX_WORKERS=5

# Apple Music Configuration
DOWNLOADER_PATH=/usr/src/app/downloader/am_downloader.sh
INSTALLER_PATH=/usr/src/app/downloader/install_am_downloader.sh
APPLE_DEFAULT_FORMAT=alac
APPLE_ALAC_QUALITY=192000
APPLE_ATMOS_QUALITY=2768
APPLE_WRAPPER_SETUP_PATH=/usr/src/app/downloader/setup_wrapper.sh
APPLE_WRAPPER_STOP_PATH=/usr/src/app/downloader/stop_wrapper.sh

# Optional Settings (can also be set via /settings command)
EXTRACT_EMBEDDED_COVER=True
